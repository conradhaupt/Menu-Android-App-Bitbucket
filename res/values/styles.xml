<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ActionBarStyles -->
    <style name="ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse"></style>

    <style name="ActionBarStyle.Red">
        <item name="android:background">@color/MenU_Red_Light</item>
        <item name="ic_launcher">@drawable/ic_launcher_red</item>
        <item name="android:logo">@drawable/ic_logo_dark</item>
    </style>

    <style name="ActionBarStyle.Turquoise">
        <item name="android:background">@color/MenU_Turquoise_Light</item>
        <item name="ic_launcher">@drawable/ic_launcher_turquoise</item>
        <item name="android:logo">@drawable/ic_logo_dark</item>
    </style>

    <style name="ActionBarStyle.Blue">
        <item name="android:background">@color/MenU_Blue_Light</item>
        <item name="ic_launcher">@drawable/ic_launcher_blue</item>
        <item name="android:logo">@drawable/ic_logo_dark</item>
    </style>

    <style name="ActionBarStyle.Red.Inverse" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@color/MenU_Grey_Light</item>
        <item name="android:logo">@drawable/ic_logo_red</item>
    </style>

    <style name="ActionBarStyle.Turquoise.Inverse" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@color/MenU_Grey_Light</item>
        <item name="android:logo">@drawable/ic_logo_turquoise</item>
    </style>

    <style name="ActionBarStyle.Blue.Inverse" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@color/MenU_Grey_Light</item>
        <item name="android:logo">@drawable/ic_logo_blue</item>
    </style>

    <style name="ActionBarStyle.ActionButtonStyle" parent="@android:style/Widget.Holo.ActionButton">
        <item name="android:background">?attr/selection_drawable_background</item>
    </style>

</resources>